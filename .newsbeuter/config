auto-reload yes
suppress-first-reload yes
download-retries 5
reload-threads 20
goto-first-unread no
text-width 72

use-proxy yes
proxy-type socks5
proxy localhost:9050

# make deletion of the articles completely Mutt-like
unbind-key D
bind-key d delete-article

bind-key ESC quit

unbind-key O
bind-key O open-all-unread-in-browser-and-mark-read

# make currently focused unread item more visible
color listnormal blue black
color listnormal_unread green black
color listfocus white black
color listfocus_unread white black bold

highlight article "^Title: .*$" green default
highlight article "^(Feed|Author|Link|Date):.*$" cyan default

browser /usr/bin/firefox

urls-source "local"

include "~/.newsbeuter/config.sensitive"
