#!/bin/sh

# disabling touchpad on typing
syndaemon -i 1 -K -d -p $HOME/.syndaemon.pid
# enable tapping
synclient TapButton1=1 TapButton2=2 TapButton3=3

 /usr/lib/x86_64-linux-gnu/mate-notification-daemon/mate-notification-daemon &
.scripts/set-logitech-m570-sensitivity
.bin/arbtt-capture --sample-rate=10 & # sample once in 10 seconds

exec /home/minoru/.xmonad/xmonad-x86_64-linux
